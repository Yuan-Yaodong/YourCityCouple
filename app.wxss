/** app.wxss **/
page {
  background: linear-gradient(180deg, #E62E2E 0%, #C41E3A 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #FFD700;
  text-shadow: 2rpx 2rpx 8rpx rgba(0,0,0,0.3);
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #FFF8E1;
  margin-bottom: 60rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #C41E3A;
  font-size: 36rpx;
  font-weight: bold;
  padding: 30rpx 80rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 165, 0, 0.4);
}

.btn-primary:active {
  transform: scale(0.95);
}

.decoration {
  position: absolute;
  font-size: 60rpx;
}
