/* pages/index/index.wxss */
.container {
  position: relative;
  background: linear-gradient(180deg, #E62E2E 0%, #8B0000 100%);
}

.title-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 80rpx;
  font-weight: 900;
  color: #FFD700;
  text-shadow: 4rpx 4rpx 12rpx rgba(0,0,0,0.4);
  letter-spacing: 8rpx;
}

.title-second {
  font-size: 64rpx;
  font-weight: bold;
  color: #FFD700;
  text-shadow: 2rpx 2rpx 8rpx rgba(0,0,0,0.3);
  margin-top: 10rpx;
}

.subtitle {
  font-size: 36rpx;
  color: #FFF8E1;
  margin-bottom: 40rpx;
  font-weight: 500;
}

.lucky-words {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.lucky-words text {
  font-size: 28rpx;
  color: #FFD700;
  margin: 10rpx 0;
  text-shadow: 1rpx 1rpx 4rpx rgba(0,0,0,0.3);
}

.btn-primary {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #8B0000;
  font-size: 40rpx;
  font-weight: 900;
  padding: 30rpx 100rpx;
  border-radius: 60rpx;
  box-shadow: 0 12rpx 30rpx rgba(255, 165, 0, 0.5);
  border: none;
}

.btn-primary::after {
  border: none;
}

.decoration {
  position: absolute;
  font-size: 60rpx;
  opacity: 0.8;
}

.top-left {
  top: 60rpx;
  left: 40rpx;
  animation: float 3s ease-in-out infinite;
}

.top-right {
  top: 80rpx;
  right: 40rpx;
  animation: float 3s ease-in-out infinite 0.5s;
}

.bottom-left {
  bottom: 120rpx;
  left: 40rpx;
  animation: float-in-out infinite  3s ease1s;
}

.bottom-right {
  bottom: 140rpx;
  right: 40rpx;
  animation: float 3s ease-in-out infinite 1.5s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-15rpx);
  }
}

.tips {
  position: absolute;
  bottom: 40rpx;
  font-size: 24rpx;
  color: rgba(255, 248, 225, 0.6);
}
