/* pages/result/result.wxss */
.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.loading text {
  color: #FFD700;
  font-size: 32rpx;
}

/* 顶部装饰 */
.top-decor {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.top-decor text {
  font-size: 40rpx;
  animation: float 2s ease-in-out infinite;
}

.top-decor text:nth-child(2) {
  animation-delay: 0.5s;
}

.top-decor text:nth-child(3) {
  animation-delay: 1s;
}

/* 结果头部 */
.result-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.result-label {
  font-size: 28rpx;
  color: #FFD700;
  margin-bottom: 10rpx;
}

.result-emoji {
  font-size: 100rpx;
  margin-bottom: 10rpx;
}

.result-city {
  font-size: 56rpx;
  font-weight: 900;
  color: #FFD700;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 城市卡片 */
.city-card {
  background: #FFF;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.city-desc {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #E62E2E;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 标签 */
.tags {
  display: flex;
  justify-content: center;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.tag {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #8B0000;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  opacity: 0;
  animation: tagPopIn 0.4s ease forwards;
}

@keyframes tagPopIn {
  from {
    opacity: 0;
    transform: scale(0.5);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 详细介绍 */
.city-detail {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: center;
}

/* 分析文案 */
.analysis-section {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx dashed #FFD700;
}

.analysis-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #E62E2E;
  text-align: center;
  margin-bottom: 20rpx;
}

.analysis-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding: 12rpx;
  background: #FFF9E6;
  border-radius: 10rpx;
}

.analysis-point {
  font-size: 28rpx;
  font-weight: bold;
  color: #E62E2E;
  margin-bottom: 6rpx;
}

.analysis-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.analysis-summary {
  margin-top: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #FFF8DC, #FFE4B5);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #E62E2E;
  text-align: center;
  font-weight: bold;
}

/* 按钮区域 */
.btn-area {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-share {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #8B0000;
  font-size: 32rpx;
  font-weight: bold;
  padding: 25rpx;
  border-radius: 50rpx;
  border: none;
}

.btn-restart {
  background: rgba(255, 255, 255, 0.2);
  color: #FFF;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 50rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.btn-share::after,
.btn-restart::after {
  border: none;
}

/* 底部装饰 */
.bottom-decor {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-top: 40rpx;
}

.bottom-decor text {
  font-size: 40rpx;
  opacity: 0.5;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* 动画类 */
.fade-in {
  animation: fadeIn 0.6s ease forwards;
  opacity: 0;
}

.slide-up {
  animation: slideUp 0.6s ease forwards;
  opacity: 0;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 海报弹窗 */
.poster-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.poster-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  max-width: 90%;
  max-height: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.poster-image {
  width: 500rpx;
  border-radius: 10rpx;
}

.btn-save {
  margin-top: 30rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #8B0000;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  border: none;
}

.close-hint {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 隐藏的 canvas */
.hide-canvas {
  position: absolute;
  left: -9999px;
  top: -9999px;
  width: 600px;
  height: 900px;
}

/* 按钮样式 */
.btn-poster {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #8B0000;
  font-size: 32rpx;
  font-weight: bold;
  padding: 25rpx;
  border-radius: 50rpx;
  border: none;
}

.btn-copy {
  background: rgba(255, 255, 255, 0.15);
  color: #FFF;
  font-size: 32rpx;
  font-weight: bold;
  padding: 25rpx;
  border-radius: 50rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.btn-poster::after,
.btn-copy::after {
  border: none;
}
