/* pages/result/result.wxss */
.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.loading text {
  color: #FFD700;
  font-size: 32rpx;
}

/* 顶部装饰 */
.top-decor {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.top-decor text {
  font-size: 40rpx;
  animation: float 2s ease-in-out infinite;
}

.top-decor text:nth-child(2) {
  animation-delay: 0.5s;
}

.top-decor text:nth-child(3) {
  animation-delay: 1s;
}

/* 结果头部 */
.result-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.result-label {
  font-size: 28rpx;
  color: #FFD700;
  margin-bottom: 10rpx;
}

.result-emoji {
  font-size: 100rpx;
  margin-bottom: 10rpx;
}

.result-city {
  font-size: 56rpx;
  font-weight: 900;
  color: #FFD700;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 城市卡片 */
.city-card {
  background: #FFF;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.city-desc {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #E62E2E;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 标签 */
.tags {
  display: flex;
  justify-content: center;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.tag {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #8B0000;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  opacity: 0;
  animation: tagPopIn 0.4s ease forwards;
}

@keyframes tagPopIn {
  from {
    opacity: 0;
    transform: scale(0.5);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 详细介绍 */
.city-detail {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: center;
}

/* 分析文案 */
.analysis-section {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx dashed #FFD700;
}

.analysis-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #E62E2E;
  text-align: center;
  margin-bottom: 20rpx;
}

.analysis-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding: 12rpx;
  background: #FFF9E6;
  border-radius: 10rpx;
}

.analysis-point {
  font-size: 28rpx;
  font-weight: bold;
  color: #E62E2E;
  margin-bottom: 6rpx;
}

.analysis-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.analysis-summary {
  margin-top: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #FFF8DC, #FFE4B5);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #E62E2E;
  text-align: center;
  font-weight: bold;
}

/* 按钮区域 */
.btn-area {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-share {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #8B0000;
  font-size: 32rpx;
  font-weight: bold;
  padding: 25rpx;
  border-radius: 50rpx;
  border: none;
}

.btn-restart {
  background: rgba(255, 255, 255, 0.2);
  color: #FFF;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 50rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.btn-share::after,
.btn-restart::after {
  border: none;
}

/* 底部装饰 */
.bottom-decor {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-top: 40rpx;
}

.bottom-decor text {
  font-size: 40rpx;
  opacity: 0.5;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* 动画类 */
.fade-in {
  animation: fadeIn 0.6s ease forwards;
  opacity: 0;
}

.slide-up {
  animation: slideUp 0.6s ease forwards;
  opacity: 0;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 海报弹窗 */
.poster-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.poster-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  max-width: 90%;
  max-height: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.poster-image {
  width: 500rpx;
  border-radius: 10rpx;
}

.btn-save {
  margin-top: 30rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #8B0000;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  border: none;
}

.close-hint {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 隐藏的 canvas */
.hide-canvas {
  position: absolute;
  left: -9999px;
  top: -9999px;
  width: 600px;
  height: 900px;
}

/* 按钮样式 */
.btn-poster {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #8B0000;
  font-size: 32rpx;
  font-weight: bold;
  padding: 25rpx;
  border-radius: 50rpx;
  border: none;
}

.btn-copy {
  background: rgba(255, 255, 255, 0.15);
  color: #FFF;
  font-size: 32rpx;
  font-weight: bold;
  padding: 25rpx;
  border-radius: 50rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.btn-poster::after,
.btn-copy::after {
  border: none;
}

/* MBTI人格卡片 */
.mbti-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
}

.mbti-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.mbti-emoji {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.mbti-title-wrap {
  display: flex;
  flex-direction: column;
}

.mbti-type {
  font-size: 44rpx;
  font-weight: 900;
  color: #FFD700;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.mbti-name {
  font-size: 28rpx;
  color: #FFF;
  opacity: 0.9;
}

.mbti-desc {
  display: block;
  font-size: 26rpx;
  color: #FFF;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.mbti-travel {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 20rpx;
}

.mbti-travel-label {
  display: block;
  font-size: 22rpx;
  color: #FFD700;
  margin-bottom: 10rpx;
}

.mbti-travel-text {
  display: block;
  font-size: 24rpx;
  color: #FFF;
  line-height: 1.5;
}

/* 五行属性卡片 */
.five-element-card {
  background: linear-gradient(135deg, #f5af19 0%, #f12711 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(245, 175, 25, 0.4);
}

.five-element-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.five-element-emoji {
  font-size: 50rpx;
  margin-right: 15rpx;
}

.five-element-title {
  font-size: 28rpx;
  color: #FFD700;
  font-weight: bold;
}

.five-element-name {
  font-size: 48rpx;
  font-weight: 900;
  color: #FFF;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
}

.five-element-info {
  display: flex;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.five-element-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.five-element-label {
  font-size: 22rpx;
  color: #FFD700;
  margin-bottom: 8rpx;
}

.five-element-value {
  font-size: 24rpx;
  color: #FFF;
  font-weight: bold;
}

.five-element-fortune {
  display: block;
  font-size: 26rpx;
  color: #FFF;
  line-height: 1.6;
  text-align: center;
}

/* 专属称号卡片 */
.title-card {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(255, 165, 0, 0.4);
}

.title-label {
  font-size: 24rpx;
  color: #8B0000;
  margin-bottom: 10rpx;
}

.title-name {
  font-size: 40rpx;
  font-weight: 900;
  color: #8B0000;
  text-shadow: 2rpx 2rpx 4rpx rgba(255, 255, 255, 0.5);
}

/* 治愈语录卡片 */
.healing-card {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(255, 154, 158, 0.4);
}

.healing-icon {
  font-size: 40rpx;
  margin-bottom: 15rpx;
}

.healing-text {
  font-size: 28rpx;
  color: #8B0000;
  line-height: 1.6;
  font-style: italic;
}

/* 幸运元素卡片 */
.lucky-card {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(168, 237, 234, 0.4);
}

.lucky-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #E62E2E;
  text-align: center;
  margin-bottom: 20rpx;
}

.lucky-items {
  display: flex;
  justify-content: space-around;
}

.lucky-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.lucky-label {
  font-size: 22rpx;
  color: #8B0000;
  margin-bottom: 8rpx;
}

.lucky-value {
  font-size: 26rpx;
  color: #E62E2E;
  font-weight: bold;
}
