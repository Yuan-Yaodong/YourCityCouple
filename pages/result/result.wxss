/* pages/result/result.wxss */
.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.loading text {
  color: #FFD700;
  font-size: 32rpx;
}

/* 顶部装饰 */
.top-decor {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.top-decor text {
  font-size: 40rpx;
  animation: float 2s ease-in-out infinite;
}

.top-decor text:nth-child(2) {
  animation-delay: 0.5s;
}

.top-decor text:nth-child(3) {
  animation-delay: 1s;
}

/* 结果头部 */
.result-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.result-label {
  font-size: 28rpx;
  color: #FFD700;
  margin-bottom: 10rpx;
}

.result-emoji {
  font-size: 100rpx;
  margin-bottom: 10rpx;
}

.result-city {
  font-size: 56rpx;
  font-weight: 900;
  color: #FFD700;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 城市卡片 */
.city-card {
  background: #FFF;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.city-desc {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #E62E2E;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 标签 */
.tags {
  display: flex;
  justify-content: center;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.tag {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #8B0000;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

/* 详细介绍 */
.city-detail {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: center;
}

/* 按钮区域 */
.btn-area {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-share {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #8B0000;
  font-size: 32rpx;
  font-weight: bold;
  padding: 25rpx;
  border-radius: 50rpx;
  border: none;
}

.btn-restart {
  background: rgba(255, 255, 255, 0.2);
  color: #FFF;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 50rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.btn-share::after,
.btn-restart::after {
  border: none;
}

/* 底部装饰 */
.bottom-decor {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-top: 40rpx;
}

.bottom-decor text {
  font-size: 40rpx;
  opacity: 0.5;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}
